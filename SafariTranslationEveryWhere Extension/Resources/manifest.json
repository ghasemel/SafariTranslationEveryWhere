{
    "manifest_version": 3,
    "name": "SafariTranslationEveryWhere",
    "version": "1.0",
    "description": "A Safari extension for translating pages.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["contextMenus", "activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    }
}
